@model LogInViewModel
@{
    ViewBag.Title = "LogIn";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-10 offset-2">
            <form class="form-horizontal" action="" method="post">
                <h4>Login</h4>
                <hr />
                @Html.ValidationSummary(false," ", new { @class = "text-danger"})
                <div class="form-group row">
                    <label class="col-md-1 control-label">Email</label>
                    <div class="col-md-9">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email Address" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-1 control-label">Password</label>
                    <div class="col-md-9">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                    </div>
                </div>
                <div class="form-group row">
                    <div class=" offset-1 col-md-9">
                        <label class="custom-control custom-checkbox">
                            Remember me
                            @Html.CheckBoxFor(m => m.RememberMe, new { @class = "custom-control-input" })
                            <span class="custom-control-indicator"></span>
                            <span class="custom-control-description"></span>
                        </label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="offset-1 col-md-9">
                        <button type="submit" class="btn btn-primary"><i class="fa fa-fw fa-2x fa-unlock"></i>Log In</button>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>

